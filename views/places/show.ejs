<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
    <%- include ('../partials/header.ejs') %>

    <div class="container show-container">
        <div class="row centered-row align-items-center justify-content-around">
            <div class="col first-show-col">
            <h1 class="show-place-name"><%= place.city %>, <%= place.country %></h1>
            <br/>
            <p class="text-white"><%= place.notes %></p>
            <p class="text-center text-white">
            <% if (place.visited === true) { %>
            Visited: ✔️
            <% } else { %>
            Visited: ❌
            <% } %>
            </p>
            <div class="d-flex justify-content-around">
                <% if (currentUser) { %>
        <a href="/places/<%=place.id%>/edit"><button class="show-buttons">Edit Entry</button></a>
        <form action="/places/<%= place.id %>?_method=DELETE" method="POST">
            <button class="show-buttons">
        <input class="show-buttons" type="submit" value="Delete Entry"/>
            </button>
        </form>
        <% } %>
    </div>
            </div>
            <div class="col d-flex justify-content-center">
              <img class="show-img" src="<%= place.img %>">
            </div>
          </div>
    </div>


</body>
</html>